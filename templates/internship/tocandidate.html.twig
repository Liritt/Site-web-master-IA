{% extends '_connectedNavBar.html.twig' %}
{% block stylesheets%}
    <link rel="stylesheet" href="{{ asset('css/internship.css') }}" />
{% endblock %}

{% block title %}
    Candidature à un stage
{% endblock %}

{% block body %}
    <div class="top__informations">
        <h1>Candidature</h1>
    </div>
    <div class="tocandidate__container">
        {{ form_start(form) }}
        <div class="tocandidate__uploadbtn">
            <label for="file">Télécharger votre CV</label>
            {{ form_row(form.cv, { 'label': ' ', 'attr': {'class': 'tocandidate__btn'}}) }}
            <label for="file">Télécharger votre lettre de motivation</label>
            {{ form_row(form.coverLetter, { 'label': ' ', 'attr': {'class': 'tocandidate__btn'} } ) }}
        </div>
        <div class="tocandidate__decisionbtn">
            {{ form_row(form.validate, {'label': 'Valider la candidature'}) }}
            <a href="{{ path('app_internship_show', {id: internship.id}) }}" class="btn btn-secondary">Annuler</a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

