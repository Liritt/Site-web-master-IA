{% extends '_connectedNavBar.html.twig' %}



{% block title %}
    Liste des TER de {{ teacher.lastname }} {{ teacher.firstname }}
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/ter.css') }}">
    <link rel="stylesheet" href="{{ asset('css/internship.css') }}">
{% endblock %}

{% block body %}
    <main>
        <div class="ter-component">
            <h1>Bonjour {{ teacher.lastname }} {{ teacher.firstname }}, voici les TER que vous dirigez</h1>
            <div class="lst-ter">
                <a href="{{ path('app_ter_create') }}" class="btn btn-primary btnStyle col-8">Ajouter un nouveau TER</a>
                {% for TER in lstTerTeacher %}
                <div class="col-8">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ TER.title }}</h5>
                            <a href="{{ path('app_ter_show', {id: TER.id}) }}" class="btn btn-primary btnStyle">Plus de d√©tails</a>
                            <a href="{{ path('app_ter_update', {id: TER.id}) }}" class="btn btn-primary btnStyle material-symbols-outlined">edit</a>
                            <a href="{{ path('app_ter_delete', {id: TER.id}) }}" class="btn btn-primary btnStyle material-symbols-outlined">delete</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
            </div>
        </div>
    </main>
{% endblock %}

