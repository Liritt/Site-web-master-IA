{% extends '_connectedNavBar.html.twig' %}

{% block stylesheets%}
    <link rel="stylesheet" href="{{ asset('css/trombinoscope.css') }}" />
{% endblock %}

{% block title %}page trombinoscope{% endblock %}

{% block body %}
    {{ include('student/_array_year.html.twig') }}
    <div class="container">
        <div class="row">
            {% for student in students %}
                <div class="col-3 my-2">
                    <a class="a-own" href="{{ path('app_student_profil', {id: student.id}) }}">
                        <div class="card">
                            <div class="card-body d-flex align-items-center flex-column">
                                <img class="img-own img-fluid" src="{{ asset('img/default_profile_picture.png') }}">
                                <div class="student">{{ student.firstname }} {{ student.lastname }}</div>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
