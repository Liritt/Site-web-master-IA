{% extends '_connectedNavBar.html.twig' %}

{% block stylesheets%}
    <link rel="stylesheet" href="{{ asset('css/profil.css') }}" />
{% endblock %}

{% block title %}Page entreprise{% endblock %}

{% block body %}
<div class="card text-center w-25 m-5">
    <div class="card-body">
        <h2 class="company_name">{{ company.companyName }}</h2>
        <img src="{{ asset('img/default_profile_picture.png') }}">
        <dl>
            <dt>Nom du superviseur :</dt>
            <dd>{{ company.supervisorLastname }}</dd>
            <dt>Prenom du superviseur :</dt>
            <dd>{{ company.supervisorFirstname }}</dd>
        </dl>
        <a href="{{ path('app_company') }}" class="btn btnStyle btn-primary">Retour</a>
    </div>
</div>
{% endblock %}


